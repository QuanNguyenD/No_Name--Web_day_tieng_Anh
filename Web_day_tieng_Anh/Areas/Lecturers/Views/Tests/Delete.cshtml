@model Web_day_tieng_Anh.Models.Test

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Test</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TestName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TestName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TestDescription)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TestDescription)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Course)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Course.CourseName)
        </dd>
    </dl>
    
    <form asp-action="Delete" id="deleteForm">
        <input type="hidden" asp-for="TestId" />
        <input type="submit" value="Delete" class="btn btn-danger" style="color: #000;" /> |
        <a asp-controller="Tests" asp-action="Index" asp-route-courseId="@Model.CourseId" class="btn btn-primary" style="color: #000;">Back to list</a>
    </form>
</div>
@section Scripts {
    <script>
        document.getElementById("deleteForm").onsubmit = function () {
            return confirm("If you delete, all related lessons will be lost. Are you sure you want to delete?");
        };
    </script>
}