@model Web_day_tieng_Anh.Models.Lesson

@{
    ViewData["Title"] = "Delete";
}

<h1>Update</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Lesson</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LessonName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LessonName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LessonDescription)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LessonDescription)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ImgUrl)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ImgUrl)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Course)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Course.CourseName)
        </dd>
    </dl>
    
    <form asp-action="Delete" id="deleteForm">
        <input type="hidden" asp-for="LessionId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-controller="Lessons" asp-action="Index" asp-route-courseId="@Model.CourseId">Back to list</a>
    </form>
</div>
@section Scripts {
    <script>
        document.getElementById("deleteForm").onsubmit = function () {
            return confirm("If you delete, all related lessons will be lost. Are you sure you want to delete?");
        };
    </script>
}
