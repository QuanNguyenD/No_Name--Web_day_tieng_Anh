@* @model Web_day_tieng_Anh.Models.Course
 *@
@{
    ViewData["Title"] = "Display";
}

<h1>Display</h1>

<div>
    @foreach (var lesson in Model.Lessons)
    {
        @if (lesson != null)
        {
            <div>
                <h4>@lesson.LessonName</h4>
                <p>@lesson.LessonDescription</p>
                <p>Difficulty Level: @lesson.Comments</p>
            </div>
        }
    }
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.CourseId">Edit</a> 
    <a asp-action="Index">Back to List</a>
</div>

