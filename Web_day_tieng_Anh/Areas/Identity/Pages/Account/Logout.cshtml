@page
@model LogoutModel
@{
    ViewData["Title"] = "Đăng Xuất";
}

<style>
    .btn-custom {
        color: #000;
        transition: color 0.1s; 
    }

        .btn-custom:hover {
            color: #fff;
        }
</style>

<header class="d-flex justify-content-center align-items-center flex-column">
    <h1>@ViewData["Title"]</h1>
    <div class="text-center mb-3">
        @{
            if (User.Identity?.IsAuthenticated ?? false)
            {
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                    <button type="submit" class="nav-link btn btn-outline-dark rounded-pill px-4 py-2 btn-custom">Bấm vào đây để đăng xuất</button>
                </form>
            }
            else
            {
                <p>You have successfully logged out of the application.</p>
            }
        }
    </div>
</header>




